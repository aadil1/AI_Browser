# SafeBrowse Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Your OpenAI API key (or compatible provider)
OPENAI_API_KEY=sk-your-key-here

# Optional: Custom base URL for OpenAI-compatible APIs (e.g., OpenRouter)
# OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Model to use (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# SAFEBROWSE API KEYS
# =============================================================================
# Comma-separated list of valid API keys for clients
# Generate secure keys for production: openssl rand -hex 32
SAFEBROWSE_API_KEYS=test-key,sb_prod_your_key_here

# =============================================================================
# SAFETY CONFIGURATION
# =============================================================================
# Risk threshold for blocking (0.0 - 1.0, default: 0.5)
INJECTION_THRESHOLD=0.5

# Enable ML safety model (requires torch, default: false)
SAFETY_MODEL_ENABLED=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Allowed CORS origins (comma-separated, default: *)
# CORS_ORIGINS=https://safebrowse.io,https://app.safebrowse.io

# Enable debug mode (default: false)
DEBUG=false
