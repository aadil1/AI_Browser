{
    "manifest_version": 3,
    "name": "SafeBrowse AI Security",
    "version": "1.0.0",
    "description": "Prompt-Injection Firewall for AI Agents â€” Blocks malicious web content before it reaches your AI",
    "icons": {
        "16": "icons/icon16.png",
